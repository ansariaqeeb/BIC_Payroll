            $('#FORMULA').val(txtFormula.concat("[" + data.text.trim() + "]"));
        });

        $('#IsCalculation').on('click', function () {
            var isvalue = $(this).is(':checked');
            $(this).val(isvalue);
            $('#FORMULA').val('');
            if (isvalue) {
                $('#Formulasection').removeClass('hide');
            } else {
                $('#Formulasection').addClass('hide');
            }
        });

