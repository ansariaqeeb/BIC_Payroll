@model List<DataModel.Master.Employee>
@{
    ViewBag.Title = "Employee Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}

<div class="well">
    <div class="btn-group btn-group-justified">
        <a href="/Employee/AddEmployee" class="btn btn-default">Add Employee</a>
    </div>
</div>
<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th>Action</th>
            <th data-hide="phone">Employee Code</th>
            <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Name</th>
            <th data-hide="phone"><i class="fa fa-fw fa-phone text-muted hidden-md hidden-sm hidden-xs"></i> Phone</th>
            <th>Email</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-xs btn-default" data-original-title="Edit Row" href="/Employee/Edit/@item.EMPID"><i class="fa fa-pencil"></i></a>
                </td>
                <td>@item.EMPCODE</td>
                <td>@item.FIRSTNAME @item.LASTNAME</td>
                <td>@item.CELLNO</td>
                <td>@item.EMAILID</td>
                <td>
                    @if (item.ISACTIVE)
                    {
                        <i class="fa fa-check green" style="color:green"></i>
                    }
                    else
                    {
                        <i class="fa fa-times" style="color:red"></i>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/libs/jquery-2.1.1.min.js"></script> 
<script type="text/javascript">

    // DO NOT REMOVE : GLOBAL FUNCTIONS!

    $(document).ready(function () {
        $(".breadcrumb").html('<li id="breadcrumb1">Employee Details</li>');
        var responsiveHelper_dt_basic = undefined;
        var responsiveHelper_datatable_fixed_column = undefined;
        var responsiveHelper_datatable_col_reorder = undefined;
        var responsiveHelper_datatable_tabletools = undefined;

        var breakpointDefinition = {
            tablet: 1024,
            phone: 480
        };

        $('#dt_basic').dataTable({
            "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                "t" +
                "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
            "autoWidth": true,
            "preDrawCallback": function () {
                // Initialize the responsive datatables helper once.
                if (!responsiveHelper_dt_basic) {
                    responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#dt_basic'), breakpointDefinition);
                }
            },
            "rowCallback": function (nRow) {
                responsiveHelper_dt_basic.createExpandIcon(nRow);
            },
            "drawCallback": function (oSettings) {
                responsiveHelper_dt_basic.respond();
            }
        });

    })

</script>
